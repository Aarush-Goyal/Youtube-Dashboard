<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Youtube Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/searchresults.css">
</head>

<body>

    <h3>Search Results:</h3>

    <% if (data.prevPageToken) { %>
      <form method="post" action="/searchChannel" class="search" >
        <input type="text" name="searchChannel" class="channel-name" placeholder="Enter Channel Name" hidden value="<%=query%>">
        <input type="text" name="noOfResults" hidden value="<%=numResults%>">
        <input type="text" name="prevPage" hidden value="<%=data.prevPageToken%>">
        <button type="submit" target="_self" class="btn btn-primary">Previous Page</button>
      </form>
    <% } %>
    <p>Showing <%= data.pageInfo.resultsPerPage %> results at once</p>
    <% if (data.nextPageToken) { %>
      <form method="post" action="/searchChannel" class="search" >
        <input type="text" name="searchChannel" class="channel-name" placeholder="Enter Channel Name" hidden value="<%=query%>">
        <input type="text" name="noOfResults" hidden value="<%=numResults%>">
        <input type="text" name="nextPage" hidden value="<%=data.nextPageToken%>">
        <button type="submit" target="_self" class="btn btn-primary">Next Page</button>
      </form>
    <% } %>
