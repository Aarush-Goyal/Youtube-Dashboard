    <div class="list-group">
    <% listOfItems.forEach(function(item){ %>
      <a href="/publicStat/<%=item.snippet.channelId %>" class="list-group-item list-group-item-action">
        <%=item.snippet.channelTitle %>
      </a>
    <% }) %>

    </div>



</body>

</html>
